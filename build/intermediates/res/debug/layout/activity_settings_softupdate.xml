<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_screen">

    <LinearLayout
        android:id="@+id/linear_title"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dip"
        android:layout_marginTop="50dip"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/arrow_left"/>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:text="@string/str_software_update"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_category"
        android:layout_width="220dip"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/linear_title"
        android:layout_marginBottom="100dip"
        android:layout_marginLeft="130dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_online_upgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_btn_selector"
            android:gravity="center"
            android:text="@string/str_soft_update_bt_online"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"/>

        <Button
            android:id="@+id/btn_usb_upgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dip"
            android:background="@drawable/setting_btn_selector"
            android:gravity="center"
            android:text="@string/str_soft_update_bt_usb"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"/>

        <Button
            android:id="@+id/btn_firmware_online_upgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dip"
            android:background="@drawable/setting_btn_selector"
            android:gravity="center"
            android:text="@string/str_soft_update_bt_firmware"
            android:textColor="@color/white"
            android:textSize="22sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear_title"
        android:layout_marginBottom="100dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="120dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/linear_category"
        android:background="@drawable/color_frame_halftrans_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="30dip"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_help"/>

            <TextView
                android:id="@+id/text_helptitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="Help"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_helpcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dip"
            android:layout_marginRight="70dip"
            android:text="@string/str_soft_update_cotent"
            android:textSize="@dimen/text_size_normal"/>
    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/Administrator/Desktop/TvLauncher/res/layout/activity_settings_softupdate.xml -->